{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "app:ChargePointResponse",
  "title": "ChargePointResponse",
  "description": "DTO for ChargePoint response from REST API",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Internal database ID"
    },
    "chargePointId": {
      "type": "string",
      "description": "Unique identifier for the ChargePoint"
    },
    "chargePointVendor": {
      "type": "string",
      "description": "Vendor of the ChargePoint"
    },
    "chargePointModel": {
      "type": "string",
      "description": "Model of the ChargePoint"
    },
    "firmwareVersion": {
      "type": "string",
      "description": "Firmware version"
    },
    "status": {
      "type": "string",
      "enum": [
        "OFFLINE",
        "Available",
        "Preparing",
        "Charging",
        "SuspendedEVSE",
        "SuspendedEV",
        "Finishing",
        "Reserved",
        "Unavailable",
        "Faulted"
      ],
      "description": "Current status of the ChargePoint"
    },
    "heartbeatInterval": {
      "type": "integer",
      "minimum": 0,
      "description": "Heartbeat interval in seconds"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the ChargePoint was created"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the ChargePoint was last updated"
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "chargePointId",
    "chargePointVendor",
    "chargePointModel",
    "status",
    "heartbeatInterval",
    "createdAt",
    "updatedAt"
  ]
}
